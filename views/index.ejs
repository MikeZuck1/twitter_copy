<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />
    <title>Form chapter register</title>
  </head>
  <body>
    <!-- container fluid takes all screen -- center form with height: 100vh -->
    <div class="container-fluid">
      <div
        class="d-flex flex-column align-items-center justify-content-center w-100"
        style="height: 100vh"
      >
        <h1>Form chapter register</h1>
        <form
          class="d-flex flex-column card w-50"
          method="post"
          action="/api/chapters"
        >
          <!-- body of card -->
          <div class="card-body">
            <!-- field title -->
            <div class="form-group">
              <label>Title</label>
              <input name="title" class="form-control" type="text" />
            </div>
            <!-- field nbrOfLesson -->
            <div class="form-group">
              <label>nbrOfLessons</label>
              <input name="nbrOfLessons" class="form-control" type="number" />
            </div>
            <!-- field isActive -->
            <div class="form-group">
              <input
                name="active"
                class="form-checkbox-control"
                type="checkbox"
                id="active"
              />
              <label class="form-check-label" for="active">active</label>
            </div>
            <div>
              <input type="button" value="submit" class="btn btn-primary" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
